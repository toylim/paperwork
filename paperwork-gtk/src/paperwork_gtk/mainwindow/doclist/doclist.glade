<?xml version="1.0" encoding="utf-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <menu id="doclist_menu_model">
    <section>
    </section>
  </menu>

  <object class="GtkHeaderBar" id="doclist_header">
    <property name="visible">True</property>
    <property name="title" translatable="yes">Documents</property>
    <property name="subtitle"></property>
    <property name="show_close_button">False</property>
    <property name="decoration_layout"></property>

    <child>
      <object class="GtkButton" id="doclist_new_doc">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="use_action_appearance">False</property>
        <property name="use_underline">True</property>
        <child>
          <object class="GtkImage">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="icon_name">list-add-symbolic</property>
            <property name="icon_size">1</property>
          </object>
        </child>
      </object>
      <packing>
        <property name="pack_type">start</property>
      </packing>
    </child>

    <child>
      <object class="GtkMenuButton" id="doclist_menu">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="menu_model">doclist_menu_model</property>
        <child>
          <object class="GtkImage" id="menu_image">
            <property name="visible">True</property>
            <property name="icon_name">open-menu-symbolic</property>
          </object>
        </child>
      </object>
      <packing>
        <property name="pack_type">end</property>
      </packing>
    </child>

  </object>

  <object class="GtkBox" id="doclist_body">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="orientation">vertical</property>
    <property name="name">doclist_body</property>

    <child>
      <object class="GtkOverlay">
        <property name="visible">True</property>
        <property name="can_focus">False</property>

        <child type="overlay">
          <object class="GtkSpinner" id="doclist_spinner">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
          </object>
        </child>

        <child>
          <object class="GtkScrolledWindow" id="doclist_scroll">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="shadow_type">in</property>
            <property name="kinetic_scrolling">False</property>
            <property name="name">doclist_scroll</property>
            <property name="vscrollbar_policy">always</property>
            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkListBox" id="doclist_listbox">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>
  </object>
</interface>
